<Page x:Class="CAR_BD.Fuul_Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAR_BD"
      Loaded="Window_Loaded"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Fuul_Info">

    <Grid>
        <DataGrid x:Name="avto" Margin="10,10,23,248">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding NAME_CAR}" Header="Название автомобиля"/>
                <DataGridTextColumn Binding="{Binding MODEL_CAR}" Header="Модель"/>
                <DataGridTextColumn Binding="{Binding COLOR_CAR}" Header="Цвет"/>
                <DataGridTextColumn Binding="{Binding NUMBER_CAR}" Header="Номера"/>
                <DataGridTextColumn Binding="{Binding TITLE}" Header="Откуда привезли"/>
                <DataGridTextColumn Binding="{Binding SURNAME}" Header="Фамилия Поставщика"/>
                <DataGridTextColumn Binding="{Binding SUPPLIER_NAME}" Header="Имя Поставщика"/>
                <DataGridTextColumn Binding="{Binding PATRONYMIC}" Header="Отчество Поставщика"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="exit" Content="Выход в меню" Margin="548,372,10,10" Click="exit_Click"/>
    </Grid>
</Page>
